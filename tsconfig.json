{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "types": [
    "node",
    "jest"
  ],
  // "include": ["./src/*", "src/**/*","./src/**/*.ts", "./src/*.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "babel.config.js",],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}